<Page x:Class="ElectronicsShop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicsShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      Background="#FF0C1B33">

    <Grid>

        <!-- Основной контейнер -->
        <Border CornerRadius="10" Background="#FF1A2A4A" 
                Width="350" Height="400"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                BorderBrush="#FF3A5683" BorderThickness="1"
                Effect="{StaticResource ShadowEffect}">

            <StackPanel Margin="30" VerticalAlignment="Center">
                <!-- Логотип -->
                <Image Source="/Resources/logo.png" Width="120" Height="120" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Заголовок -->
                <TextBlock Text="Вход в систему" 
                           Foreground="White" FontSize="22" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Поле логина -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Логин" Foreground="#FFA0B4D8" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtLogin" Style="{StaticResource ModernTextBox}" 
                             Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Поле пароля -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Пароль" Foreground="#FFA0B4D8" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtPassword" Style="{StaticResource ModernPasswordBox}"/>
                </StackPanel>

                <!-- Кнопка входа -->
                <Button x:Name="btnLogin" Content="Войти" 
                        Style="{StaticResource ModernButton}"
                        Click="btnLogin_Click" Margin="0,0,0,15"/>

                <!-- Ссылка на регистрацию -->
                <TextBlock HorizontalAlignment="Center">
                    <Hyperlink Foreground="#FF4D8AFF" Command="{Binding NavigateToRegisterCommand}">
                        Нет аккаунта? Зарегистрируйтесь
                    </Hyperlink>
                </TextBlock>

                <!-- Сообщение об ошибке -->
                <TextBlock x:Name="txtError" Foreground="#FFFF6B6B" 
                           TextWrapping="Wrap" HorizontalAlignment="Center"
                           Visibility="Collapsed" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
